/** FONTS **/
$proxima: "ProximaNova";
$proximaBold: "ProximaNovaBold";

/** COLORS **/
$dark-grey: #252525;
$light-grey: #373737;
$font-color: #fafeff;
$green: #24ac5d;
$facebook-blue: #36538f;
$twitter-blue: #00acec;

body {
	font-family: $proxima;
	font-size: 1em;
	background-color: $dark-grey;
	color: $font-color;
	font-weight: normal;
}

html, body {
	height: 100%;
	overflow: hidden;
}

html, html a {
    -webkit-font-smoothing: antialiased;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.004);
}

a {
	color: $font-color;
	text-decoration: none;
	&:hover {
		@extend a;
		text-decoration: underline;
	}
}

