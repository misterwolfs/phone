#navigation {
	min-height: 300px;
	display: block;
	font-size: 0.9em;

	a {
		width: 100%;
		height: 100%;
	}

	ul.nav-parent {
		list-style-type: none;
		font-family: $proximaBold;
		text-transform: uppercase;
		margin: 0;
		padding: 0;

		li:last-child {
			-webkit-box-shadow: 0px 7px 9px rgba(0, 0, 0, 0.1);
			-moz-box-shadow:    0px 7px 9px rgba(0, 0, 0, 0.1);
			box-shadow:         0px 7px 9px rgba(0, 0, 0, 0.1);
		}

		li.parent {
			background-color: $light-grey;
			border-top: 1px solid #000;
			line-height: 33px;
			text-indent: 2em;
			position: relative;
		    cursor: pointer;

		    a {
		    	display: block;
		    	text-decoration: none;
		    }
		    
		    .subnav {
		    	display: none;
		    }

			&:after {
				content: '';
				background-image: url("../img/icons/icons_sprite.gif");
				width: 11px;
				height:16px;
				background-size: 44px 16px;
				position: absolute;
				right: 2em;
				top: 8px;
			}

			&:hover:after {
				background-image: url("../img/icons/icons_sprite.gif");
				background-position: -11px 0;
				width: 17px;
				right: 1.9em;
			}

			&:hover {
				background-color: $green;
			}

		}

		li.active {
			@extend li.parent;
			background-color: $green;
			
			.subnav {
				display: block;
			}

			&:after {
				content: '';
				background-image: url("../img/icons/icons_sprite.gif");
				background-position: -11px 0;
				width: 17px;
				right: 1.9em;
				height:16px;
				background-size: 44px 16px;
				position: absolute;
				top: 8px;
			}

		}

		ul.subnav {
			margin: 0;
			padding:0;
			list-style-type: none;
			font-family: $proxima;
			text-transform: capitalize;

			li {
				height: 34px;
				text-indent: 5em;

				&:hover {
					background-color: lighten($light-grey, 3%);
				}

			}
			li:not(:last-child) {
				border-bottom: 1px solid $light-grey;
			}
			
		}
	}

	ul.subnav {
		margin-top: 20px;
		background-color: $dark-grey;
	}

} // End of navigation

